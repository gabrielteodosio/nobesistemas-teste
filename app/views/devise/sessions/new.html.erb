<section class="hero bg-sign-up d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-xl-4">
        <h2 data-aos="fade-up">
          Sign In
        </h2>

        <blockquote data-aos="fade-up" data-aos-delay="100">
          <p>Entre seus dados para conseguir acessar a sua conta.</p>
        </blockquote>
      </div>

      <div class="col-xl-2"></div>

      <div class="col-xl-6">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group mb-3">
            <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field form-group mb-3">
            <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="actions text-center">
            <%= f.submit "Log in", class: "submit-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
