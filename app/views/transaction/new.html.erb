<main id="main">
  <div class="breadcrumbs d-flex align-items-center">
    <div class="container position-relative d-flex flex-column align-items-center">
      <h2>New Transaction</h2>
    </div>
  </div>

  <section>
    <div class="container" data-aos="fade-right">
      <div class="row gy-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <%=
                form_with(
                  local: true,
                  method: :post,
                  class: "row g-3",
                  data: { turbo: false },
                  url: transaction_create_path,
                  model: [:transaction, @transaction]
                ) do |f|
              %>
                <div class="row mb-3">
                  <div class="col-6">
                    <%= f.label :receiver_id, class: "form-label" %>
                    <%= f.text_field :receiver_id, class: "form-control", required: true %>
                  </div>

                  <div class="col-6">
                    <%= f.label :sender_id, class: "form-label" %>
                    <%= f.text_field :sender_id, class: "form-control", disabled: true %>
                  </div>
                </div>

                <div class="col-12 mb-3">
                  <%= f.label :amount, class: "form-label" %>

                  <div class="input-group">
                    <span class="input-group-text" id="inputGroupPrepend2">R$</span>
                    <%= f.text_field :amount, id: "amount-field", class: "form-control", required: true %>
                  </div>
                </div>

                <div class="actions text-center">
                  <%= f.submit "Transfer", class: "submit-button btn btn-primary" %>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  </section>
</main>

<script>
  (function() {
    $("#amount-field")
      .inputmask('currency', {
        "autoUnmask": true,
        "radixPoint":",",
        "groupSeparator": ".",
        "allowMinus": false,
        "digits": 2,
        "digitsOptional": false,
        "rightAlign": false,
        "unmaskAsNumber": true,
        "removeMaskOnSubmit": true
      });
  })()
</script>
